<UserControl x:Class="OmniShell.Views.Widgets.WeatherWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border x:Name="WidgetBorder" 
            Background="#1E1E38" 
            CornerRadius="10" 
            BorderBrush="#374151"
            BorderThickness="1">
        <StackPanel>
            <!-- Widget Header -->
            <Border Background="#262640" CornerRadius="10,10,0,0" Padding="12,10">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="☀️" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Weather" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                    </StackPanel>
                    <TextBlock x:Name="LocationText" 
                               Text="Loading..."
                               FontSize="11"
                               Foreground="#6B7280"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Weather Display -->
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Weather Icon -->
                <TextBlock x:Name="WeatherIcon" 
                           Grid.Column="0"
                           Text="&#xE706;" 
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="48"
                           Foreground="#F97316"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>
                
                <!-- Temperature & Condition -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TemperatureText" 
                                   Text="--" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#F97316"/>
                        <TextBlock Text="°C" 
                                   FontSize="16" 
                                   Foreground="#9CA3AF"
                                   VerticalAlignment="Top"
                                   Margin="2,6,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="ConditionText" 
                               Text="Loading..." 
                               FontSize="12" 
                               Foreground="#9CA3AF"
                               Margin="0,2,0,0"/>
                    <TextBlock x:Name="FeelsLikeText" 
                               Text="" 
                               FontSize="11" 
                               Foreground="#6B7280"/>
                </StackPanel>
            </Grid>
            
            <!-- Additional Info -->
            <Grid Margin="12,0,12,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE9CA;" FontFamily="Segoe Fluent Icons" FontSize="16" Foreground="#38BDF8" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="HumidityText" 
                               Text="--%"
                               FontSize="12"
                               Foreground="#E5E7EB"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Humidity" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE9A8;" FontFamily="Segoe Fluent Icons" FontSize="16" Foreground="#94A3B8" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="WindText" 
                               Text="-- km/h"
                               FontSize="12"
                               Foreground="#E5E7EB"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Wind" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
