<UserControl x:Class="OmniShell.Views.Widgets.CalendarWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border x:Name="WidgetBorder" 
            Background="#1E1E38" 
            CornerRadius="10" 
            BorderBrush="#374151"
            BorderThickness="1">
        <StackPanel>
            <!-- Widget Header -->
            <Border Background="#262640" CornerRadius="10,10,0,0" Padding="12,10">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M6,1 L6,3 M18,1 L18,3 M3,7 L21,7 M3,4 L21,4 C22,4 23,5 23,6 L23,20 C23,21 22,22 21,22 L3,22 C2,22 1,21 1,20 L1,6 C1,5 2,4 3,4 Z" 
                          Stroke="#06B6D4" 
                          StrokeThickness="1.5"
                          Width="16" Height="16" 
                          Stretch="Uniform"
                          Margin="0,0,8,0"/>
                    <TextBlock Text="Calendar" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </StackPanel>
            </Border>
            
            <!-- Date Display -->
            <StackPanel Margin="12" HorizontalAlignment="Center">
                <TextBlock x:Name="DayOfWeekText" 
                           Text="Monday" 
                           FontSize="14" 
                           Foreground="#9CA3AF"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="DayNumberText" 
                           Text="16" 
                           FontSize="48" 
                           FontWeight="Bold"
                           Foreground="#06B6D4"
                           HorizontalAlignment="Center"
                           Margin="0,-5"/>
                <TextBlock x:Name="MonthYearText" 
                           Text="January 2026" 
                           FontSize="14" 
                           Foreground="#E5E7EB"
                           HorizontalAlignment="Center"/>
            </StackPanel>
            
            <!-- Open Calendar Button -->
            <Button x:Name="OpenCalendarButton" 
                    Click="OpenCalendarButton_Click"
                    Background="#262640"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="12,0,12,12">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6" Padding="12,8">
                            <TextBlock Text="Open Calendar" 
                                       FontSize="12" 
                                       Foreground="#9CA3AF"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#333355"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
