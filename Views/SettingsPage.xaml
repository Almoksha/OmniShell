<Page x:Class="OmniShell.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Settings"
      Background="Transparent">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Settings" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Configure OmniShell preferences" 
                       FontSize="14" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- Settings Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Context Menu Integration -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Context Menu Integration" 
                                       FontSize="15" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Add 'Tint Folder' to right-click menu" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button x:Name="ContextMenuButton" 
                                Content="Install" 
                                Style="{StaticResource SecondaryButton}"
                                Click="ContextMenuButton_Click"
                                Grid.Column="1"/>
                    </Grid>
                </Border>
                
                <!-- Sidebar -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Quick Access Sidebar" 
                                       FontSize="15" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Show docked sidebar with clipboard manager and system monitor" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button x:Name="SidebarToggleButton" 
                                Content="Show" 
                                Style="{StaticResource SecondaryButton}"
                                Click="SidebarToggleButton_Click"
                                Grid.Column="1"/>
                    </Grid>
                </Border>
                
                <!-- Start with Windows -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Start with Windows" 
                                       FontSize="15" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Launch OmniShell when Windows starts" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <!-- Custom iOS-style toggle switch -->
                        <Border x:Name="StartupToggle"
                                Grid.Column="1"
                                Width="52" Height="28"
                                CornerRadius="14"
                                Background="#4B5563"
                                Cursor="Hand"
                                Padding="2"
                                VerticalAlignment="Center"
                                MouseLeftButtonUp="StartupToggle_Click">
                            <Ellipse x:Name="StartupToggleKnob"
                                     Width="24" Height="24"
                                     Fill="White"
                                     HorizontalAlignment="Left">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      Opacity="0.2" 
                                                      BlurRadius="4" 
                                                      ShadowDepth="1"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- About -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="About OmniShell" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Version 1.0.0" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="A unified Windows customization utility" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                        
                        <!-- GitHub Link -->
                        <TextBlock Margin="0,12,0,0">
                            <Hyperlink NavigateUri="https://github.com/Almoksha/OmniShell"
                                       RequestNavigate="Hyperlink_RequestNavigate"
                                       Foreground="#6366F1"
                                       TextDecorations="None">
                                <Run Text="ðŸ”— GitHub Repository" FontSize="13"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
