<Window x:Class="OmniShell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OmniShell" 
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Icon="Resources/app_icon.ico">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      CornerRadius="12"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    
    <Border CornerRadius="12" 
            Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" 
                    Background="Transparent"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="16,0,0,0">
                        <!-- Logo -->
                        <Ellipse Width="24" Height="24" Margin="0,0,10,0">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#6366F1" Offset="0"/>
                                    <GradientStop Color="#EC4899" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="OmniShell" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button x:Name="MinimizeButton" 
                                Click="MinimizeButton_Click"
                                Width="46" Height="40" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Cursor="Hand">
                            <Path Data="M0,0 L10,0" 
                                  Stroke="{StaticResource TextSecondaryBrush}" 
                                  StrokeThickness="1"/>
                        </Button>
                        <Button x:Name="MaximizeButton" 
                                Click="MaximizeButton_Click"
                                Width="46" Height="40" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Cursor="Hand">
                            <Rectangle Width="10" Height="10" 
                                       Stroke="{StaticResource TextSecondaryBrush}" 
                                       StrokeThickness="1"/>
                        </Button>
                        <Button x:Name="CloseButton" 
                                Click="CloseButton_Click"
                                Width="46" Height="40" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="Transparent" CornerRadius="0,12,0,0">
                                                    <Path x:Name="icon" Data="M0,0 L10,10 M10,0 L0,10" 
                                                          Stroke="{StaticResource TextSecondaryBrush}" 
                                                          StrokeThickness="1"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#E81123"/>
                                                        <Setter TargetName="icon" Property="Stroke" Value="White"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Sidebar Navigation -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="{StaticResource SurfaceBrush}"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Dynamic Plugin Nav Items -->
                    <ItemsControl x:Name="PluginNavItems" Grid.Row="0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="Navigation"
                                             Checked="PluginNavItem_Checked"
                                             Tag="{Binding}">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="bg" 
                                                    Background="Transparent" 
                                                    CornerRadius="8" 
                                                    Padding="12,10" 
                                                    Margin="0,2"
                                                    Cursor="Hand">
                                                <StackPanel Orientation="Horizontal">
                                                    <Path Data="{Binding IconPathData}" 
                                                          Fill="{StaticResource TextSecondaryBrush}" 
                                                          Width="20" Height="20" 
                                                          Stretch="Uniform"/>
                                                    <TextBlock Text="{Binding Name}" 
                                                               Foreground="{StaticResource TextPrimaryBrush}" 
                                                               FontSize="13"
                                                               Margin="12,0,0,0" 
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#222244"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Settings (always at bottom, not a plugin) -->
                    <RadioButton x:Name="NavSettings" 
                                 Grid.Row="1"
                                 GroupName="Navigation"
                                 Checked="NavSettings_Checked">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border x:Name="bg" 
                                        Background="Transparent" 
                                        CornerRadius="8" 
                                        Padding="12,10" 
                                        Margin="0,2"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="18" Height="18" 
                                                 Stroke="{StaticResource TextSecondaryBrush}" 
                                                 StrokeThickness="1.5"/>
                                        <TextBlock Text="Settings" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                                   FontSize="13"
                                                   Margin="12,0,0,0" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="#222244"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                </Grid>
            </Border>
            
            <!-- Main Content Area -->
            <Border Grid.Row="1" Grid.Column="1" Padding="24">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Border>
</Window>
