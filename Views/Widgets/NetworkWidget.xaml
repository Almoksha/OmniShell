<UserControl x:Class="OmniShell.Views.Widgets.NetworkWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border x:Name="WidgetBorder" 
            Background="#1E1E38" 
            CornerRadius="10" 
            BorderBrush="#374151"
            BorderThickness="1">
        <StackPanel>
            <!-- Widget Header -->
            <Border Background="#262640" CornerRadius="10,10,0,0" Padding="12,10">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M12,2 L12,8 M12,16 L12,22 M2,12 L8,12 M16,12 L22,12 M5,5 L9,9 M15,15 L19,19 M5,19 L9,15 M15,9 L19,5" 
                          Stroke="#8B5CF6" 
                          StrokeThickness="1.5"
                          Width="16" Height="16" 
                          Stretch="Uniform"
                          Margin="0,0,8,0"/>
                    <TextBlock Text="Network" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </StackPanel>
            </Border>
            
            <!-- Network Stats -->
            <StackPanel Margin="12">
                <!-- Speed Display -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Download -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="↓" FontSize="16" Foreground="#10B981" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="DownloadSpeedText" 
                                   Text="0 KB/s" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#E5E7EB"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Download" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Upload -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="↑" FontSize="16" Foreground="#F97316" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="UploadSpeedText" 
                                   Text="0 KB/s" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#E5E7EB"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Upload" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- IP Address -->
                <Border Background="#262640" CornerRadius="6" Padding="10,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="IP" FontSize="11" Foreground="#6B7280" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="IpAddressText" 
                                   Grid.Column="1"
                                   Text="192.168.1.100" 
                                   FontSize="12" 
                                   Foreground="#9CA3AF"
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
