<Window x:Class="OmniShell.Views.SidebarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:widgets="clr-namespace:OmniShell.Views.Widgets"
        mc:Ignorable="d"
        Title="OmniShell Sidebar"
        Width="320"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Background="Transparent">
    
    <Border CornerRadius="0" 
            BorderThickness="1,0,0,0"
            BorderBrush="#40FFFFFF">
        <Border.Background>
            <SolidColorBrush Color="#1A1A2E" Opacity="0.92"/>
        </Border.Background>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#262640" 
                    CornerRadius="0"
                    Padding="16,12">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="20" Height="20" Margin="0,0,10,0">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#6366F1" Offset="0"/>
                                    <GradientStop Color="#EC4899" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="Quick Access" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Collapse Button -->
                    <Button x:Name="CollapseButton" 
                            Click="CollapseButton_Click"
                            HorizontalAlignment="Right"
                            Width="28" Height="28"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Minimize/Expand Sidebar">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bg" Background="#1E1E38" CornerRadius="6">
                                    <TextBlock x:Name="CollapseIcon" 
                                               Text="&#xE76C;" 
                                               FontFamily="Segoe Fluent Icons" 
                                               FontSize="14" 
                                               Foreground="#9CA3AF"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="#333355"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Compact View (shown when minimized) -->
            <ScrollViewer x:Name="CompactView" 
                          Grid.Row="1" 
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="Collapsed">
                <StackPanel x:Name="CompactIconsPanel" Margin="6">
                    <!-- Compact Calendar -->
                    <Border x:Name="CompactCalendarBtn" Background="#1E1E38" CornerRadius="8" Padding="6" Margin="0,0,0,6" Cursor="Hand" Tag="Calendar" MouseLeftButtonUp="CompactIcon_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE787;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="#06B6D4" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CompactDate" Text="16" FontSize="12" FontWeight="Bold" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Compact Weather -->
                    <Border x:Name="CompactWeatherBtn" Background="#1E1E38" CornerRadius="8" Padding="6" Margin="0,0,0,6" Cursor="Hand" Tag="Weather" MouseLeftButtonUp="CompactIcon_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE9CA;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="#F97316" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CompactTemp" Text="24°" FontSize="11" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Compact Pomodoro -->
                    <Border x:Name="CompactPomodoroBtn" Background="#1E1E38" CornerRadius="8" Padding="6" Margin="0,0,0,6" Cursor="Hand" Tag="Pomodoro" MouseLeftButtonUp="CompactIcon_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE916;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="#F97316" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CompactTimer" Text="25:00" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Compact Notes -->
                    <Border x:Name="CompactNotesBtn" Background="#1E1E38" CornerRadius="8" Padding="10,6" Margin="0,0,0,6" Cursor="Hand" Tag="Notes" MouseLeftButtonUp="CompactIcon_Click">
                        <TextBlock Text="&#xE70B;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="#8B5CF6" HorizontalAlignment="Center"/>
                    </Border>
                    
                    <!-- Compact Battery -->
                    <Border x:Name="CompactBatteryBtn" Background="#1E1E38" CornerRadius="8" Padding="6" Margin="0,0,0,6" Cursor="Hand" Tag="Battery" MouseLeftButtonUp="CompactIcon_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xEBA0;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="#10B981" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CompactBattery" Text="100%" FontSize="9" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Compact Network -->
                    <Border x:Name="CompactNetworkBtn" Background="#1E1E38" CornerRadius="8" Padding="6" Margin="0,0,0,6" Cursor="Hand" Tag="Network" MouseLeftButtonUp="CompactIcon_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xEC3B;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="#8B5CF6" HorizontalAlignment="Center"/>
                            <TextBlock Text="↓↑" FontSize="9" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Compact Clipboard -->
                    <Border x:Name="CompactClipboardBtn" Background="#1E1E38" CornerRadius="8" Padding="10,6" Margin="0,0,0,6" Cursor="Hand" Tag="Clipboard" MouseLeftButtonUp="CompactIcon_Click">
                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="#6366F1" HorizontalAlignment="Center"/>
                    </Border>
                    
                    <!-- Compact System -->
                    <Border x:Name="CompactSystemBtn" Background="#1E1E38" CornerRadius="8" Padding="6" Margin="0,0,0,6" Cursor="Hand" Tag="System" MouseLeftButtonUp="CompactIcon_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="&#xE7F4;" FontFamily="Segoe Fluent Icons" FontSize="20" Foreground="#06B6D4" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CompactCpu" Text="4%" FontSize="9" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Widget Popup (shown when compact icon is clicked) -->
            <Popup x:Name="WidgetPopup" 
                   Placement="Left" 
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade">
                <!-- No extra border - widgets already have their own styling -->
                <Grid x:Name="PopupContent" Width="300" MaxHeight="400">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                    </Grid.Effect>
                </Grid>
            </Popup>
            
            <!-- Widgets Container (shown when expanded) -->
            <ScrollViewer x:Name="WidgetsScroller" 
                          Grid.Row="1" 
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="12">
                    
                    <!-- Clipboard Manager Widget -->
                    <Border x:Name="ClipboardWidget" 
                            Background="#1E1E38" 
                            CornerRadius="10" 
                            Margin="0,0,0,12"
                            BorderBrush="#374151"
                            BorderThickness="1">
                        <StackPanel>
                            <!-- Widget Header -->
                            <Border Background="#262640" CornerRadius="10,10,0,0" Padding="12,10">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M4,2 L4,0 L16,0 L16,2 L20,2 L20,18 L0,18 L0,2 Z M6,2 L14,2 L14,4 L6,4 Z" 
                                              Fill="#06B6D4" 
                                              Width="16" Height="16" 
                                              Stretch="Uniform"
                                              Margin="0,0,8,0"/>
                                        <TextBlock Text="Clipboard" 
                                                   FontSize="13" 
                                                   FontWeight="SemiBold"
                                                   Foreground="White"/>
                                    </StackPanel>
                                    <Button x:Name="ClearClipboardButton" 
                                            Click="ClearClipboardButton_Click"
                                            HorizontalAlignment="Right"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Clear History">
                                        <TextBlock Text="Clear" FontSize="11" Foreground="#9CA3AF"/>
                                    </Button>
                                </Grid>
                            </Border>
                            
                            <!-- Clipboard Items -->
                            <ItemsControl x:Name="ClipboardItems" Margin="8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="ItemBorder"
                                                Background="#262640" 
                                                CornerRadius="6" 
                                                Margin="0,4" 
                                                Padding="10,8"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="ClipboardItem_Click">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#333355"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Preview}" 
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxHeight="40"
                                                           FontSize="12"
                                                           Foreground="#E5E7EB"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding TimeAgo}"
                                                           FontSize="10"
                                                           Foreground="#6B7280"
                                                           Margin="8,0,0,0"
                                                           VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Empty State -->
                            <TextBlock x:Name="ClipboardEmptyState"
                                       Text="No clipboard history yet"
                                       FontSize="12"
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center"
                                       Margin="0,16"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Resource Monitor Widget -->
                    <Border x:Name="ResourceWidget" 
                            Background="#1E1E38" 
                            CornerRadius="10"
                            Margin="0,0,0,12"
                            BorderBrush="#374151"
                            BorderThickness="1">
                        <StackPanel>
                            <!-- Widget Header -->
                            <Border Background="#262640" CornerRadius="10,10,0,0" Padding="12,10">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M10,0 A10,10 0 1 1 0,10 L2,10 A8,8 0 1 0 10,2 Z" 
                                          Fill="#8B5CF6" 
                                          Width="16" Height="16" 
                                          Stretch="Uniform"
                                          Margin="0,0,8,0"/>
                                    <TextBlock Text="System" 
                                               FontSize="13" 
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- CPU Gauge -->
                            <StackPanel Margin="12,12,12,8">
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="CPU" FontSize="11" Foreground="#9CA3AF"/>
                                    <TextBlock x:Name="CpuPercentText" 
                                               Text="0%" 
                                               FontSize="11" 
                                               Foreground="#06B6D4"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Background="#0F0F23" CornerRadius="4" Height="8">
                                    <Border x:Name="CpuProgressBar"
                                            Background="{StaticResource AccentGradient}"
                                            CornerRadius="4"
                                            HorizontalAlignment="Left"
                                            Width="0"/>
                                </Border>
                            </StackPanel>
                            
                            <!-- RAM Gauge -->
                            <StackPanel Margin="12,8,12,12">
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="RAM" FontSize="11" Foreground="#9CA3AF"/>
                                    <TextBlock x:Name="RamPercentText" 
                                               Text="0 / 0 GB" 
                                               FontSize="11" 
                                               Foreground="#8B5CF6"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Background="#0F0F23" CornerRadius="4" Height="8">
                                    <Border x:Name="RamProgressBar"
                                            CornerRadius="4"
                                            HorizontalAlignment="Left"
                                            Width="0">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                                <GradientStop Color="#EC4899" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Calendar Widget -->
                    <widgets:CalendarWidget x:Name="CalendarWidgetContainer" Margin="0,0,0,12"/>
                    
                    <!-- Weather Widget -->
                    <widgets:WeatherWidget x:Name="WeatherWidgetContainer" Margin="0,0,0,12"/>
                    
                    <!-- Pomodoro Timer Widget -->
                    <widgets:PomodoroWidget x:Name="PomodoroWidgetContainer" Margin="0,0,0,12"/>
                    
                    <!-- Quick Notes Widget -->
                    <widgets:NotesWidget x:Name="NotesWidgetContainer" Margin="0,0,0,12"/>
                    
                    <!-- Battery Status Widget -->
                    <widgets:BatteryWidget x:Name="BatteryWidgetContainer" Margin="0,0,0,12"/>
                    
                    <!-- Network Monitor Widget -->
                    <widgets:NetworkWidget x:Name="NetworkWidgetContainer" Margin="0,0,0,12"/>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
